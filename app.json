{
  "name": "Metroscope",
  "scripts": {
    "postdeploy": "flask add_admin"
  },
  "env": {
      "FLASK_APP": {
        "required": true
    },
      "FLASK_CONFIG": {
        "required": true
    },
      "FLASK_DEBUG": {
        "required": true
    },
      "SECRET_KEY": {
        "required": true
    },
      "DATABASE_URL": {
        "required": true
      }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
      "heroku-postgresql:hobby-dev"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "stack": "heroku-18"
}
